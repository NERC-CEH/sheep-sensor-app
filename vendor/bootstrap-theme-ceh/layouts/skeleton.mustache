<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{title}}</title>
    {{> head}}
  </head>
  <body>
    <div class="navbar navbar-default {{navbar_class}}{{^navbar_class}}navbar-fixed-top{{/navbar_class}}" role="navigation">
      <div class="container-fluid">
        <div id="sso-brand" class="navbar-header"> 
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <h3 class="navbar-text" href="#">Not Proxied</h3>
        </div>
        <div class="navbar-collapse collapse">
          {{#nav-title}} <h3 class="navbar-text">{{nav-title}}</h3> {{/nav-title}}
          <ul class="nav navbar-nav">
            {{#navigation}}
              <li><a href="{{href}}">{{text}}</a></li>
            {{/navigation}}
            {{^navigation}}
              <li><a href="//eip.ceh.ac.uk">Home</a></li>
              <li><a href="//catalogue.ceh.ac.uk/documents">Search Data</a></li>
              <li><a href="//eip.ceh.ac.uk/catalogue/help">Help</a></li>
            {{/navigation}}
          </ul>
          <ul class="nav navbar-nav navbar-right">
            {{#nav-controls}}
              <li>{{nav-controls}}</li>
            {{/nav-controls}}
            <li id="sso-user"><a>Joe Bloggs</a></li>
          </ul>
        </div>
      </div>
    </div>
    {{> body}}
  </body>
</html>
